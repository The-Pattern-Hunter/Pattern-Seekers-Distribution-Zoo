# --- 12. Insurance-probability examples (live calculations) ---
use_daily = False
if 'date' in df.columns:
    try:
        df['date'] = pd.to_datetime(df['date'])
        freq_days = (df['date'].max() - df['date'].min()).days / max(1, len(df)-1)
        if freq_days <= 2.5:
            use_daily = True
    except Exception:
        use_daily = False

if use_daily:
    daily_values = df['rainfall_mm'].values
else:
    print('Daily data not detected. Creating illustrative daily-like data.')
    positive = df['rainfall_mm'].clip(lower=0).values
    shape, loc, scale = stats.lognorm.fit(positive[positive>0], floc=0)
    rng = np.random.default_rng(123)
    daily_values = stats.lognorm.rvs(shape, loc=0, scale=scale, size=365*30, random_state=rng)

threshold = 100.0
p_extreme_empirical = np.mean(daily_values > threshold)
monsoon_days = 90
prob_at_least_one = 1 - (1 - p_extreme_empirical) ** monsoon_days
expected_extremes = monsoon_days * p_extreme_empirical

print(f"P(daily > {threshold}) ≈ {p_extreme_empirical:.5f}")
print(f"P(≥1 extreme in monsoon) ≈ {prob_at_least_one:.4f}")
print(f"Expected # extremes/monsoon ≈ {expected_extremes:.3f}")

import random
def monte_carlo_consecutive_prob(daily_vals, season_len=90, k=2, n_trials=5000):
    n = len(daily_vals)
    count = 0
    for _ in range(n_trials):
        start = random.randint(0, n - season_len - 1)
        season = daily_vals[start:start+season_len]
        consec = 0
        found = False
        for val in season:
            if val > threshold:
                consec += 1
                if consec >= k:
                    found = True
                    break
            else:
                consec = 0
        if found:
            count += 1
    return count / n_trials

for k in [1,2,3]:
    prob_k = monte_carlo_consecutive_prob(daily_values, monsoon_days, k)
    print(f"P(run ≥{k}) ≈ {prob_k:.4f}")

plt.figure(figsize=(10,4))
for i in range(6):
    start = i * monsoon_days
    season = daily_values[start:start+monsoon_days]
    plt.plot(range(len(season)), season, alpha=0.9, label=f'Season {i+1}')
    ext_idx = np.where(season > threshold)[0]
    plt.scatter(ext_idx, season[ext_idx], marker='x')
plt.axhline(threshold, color='red', linestyle='--', label=f'Threshold {threshold} mm')
plt.legend(fontsize='small')
plt.title('Sample seasons with extreme days marked')
plt.xlabel('Day of season')
plt.ylabel('Daily rainfall (mm)')
plt.show()

