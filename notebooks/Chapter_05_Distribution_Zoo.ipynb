# --- 4. Helpers for plots ---
def plot_hist_with_fit(ax, data, bins=40, density=True, label='data'):
    ax.hist(data, bins=bins, density=density, alpha=0.35, label=label)

def plot_normal(ax, data, params=None, label='Normal fit'):
    mu, std = np.mean(data), np.std(data, ddof=1)
    x = np.linspace(min(data), max(data), 300)
    ax.plot(x, stats.norm.pdf(x, mu, std), label=f"{label} (μ={mu:.2f},σ={std:.2f})")

# --- 5. Visualize 8 distributions ---
rng = np.random.default_rng(42)
n = 2000
samples = {
    'Normal': rng.normal(50, 12, n),
    'Exponential': rng.exponential(30, n),
    'Poisson': rng.poisson(5, n),
    'LogNormal': rng.lognormal(3.7, 0.6, n),
    'Uniform': rng.uniform(0, 100, n),
    'Binomial': rng.binomial(50, 0.2, n),
    'Bimodal': np.concatenate([rng.normal(30,6, n//2), rng.normal(80,8, n//2)]),
    'PowerLike': np.random.pareto(2.5, n) * 10
}

fig, axes = plt.subplots(4,2, figsize=(14,12))
axes = axes.ravel()
for i,(name, s) in enumerate(samples.items()):
    ax = axes[i]
    ax.hist(s, bins=40, density=True, alpha=0.5)
    sns.kdeplot(s, ax=ax, bw_adjust=1)
    ax.set_title(name)
plt.tight_layout()
plt.show()

# --- 6. Interactive explorer ---
def interactive_distribution(dist_name='Normal', param1=50, param2=12):
    plt.figure(figsize=(9,4))
    ax = plt.gca()
    if dist_name == 'Normal':
        data = np.random.normal(param1, param2, 2000)
        plot_hist_with_fit(ax, data)
        plot_normal(ax, data)
    elif dist_name == 'Exponential':
        data = np.random.exponential(param1, 2000)
        plot_hist_with_fit(ax, data)
    elif dist_name == 'Poisson':
        data = np.random.poisson(param1, 2000)
        ax.bar(*np.unique(data, return_counts=True))
    elif dist_name == 'LogNormal':
        data = np.random.lognormal(param1/10.0, param2/10.0, 2000)
        plot_hist_with_fit(ax, data)
    elif dist_name == 'Uniform':
        data = np.random.uniform(param1, param2, 2000)
        plot_hist_with_fit(ax, data)
    elif dist_name == 'Binomial':
        data = np.random.binomial(int(param1), param2/100.0, 2000)
        ax.bar(*np.unique(data, return_counts=True))
    elif dist_name == 'Bimodal':
        data = np.concatenate([np.random.normal(param1-10, param2, 1000), np.random.normal(param1+30, param2+4, 1000)])
        plot_hist_with_fit(ax, data)
    elif dist_name == 'PowerLike':
        data = (np.random.pareto(param1/10.0, 2000) + 1) * param2
        plot_hist_with_fit(ax, data)
    plt.legend()
    plt.title(dist_name)
    plt.show()

dist_dropdown = Dropdown(options=list(samples.keys()), value='Normal', description='Distribution:')
p1 = IntSlider(min=1, max=200, value=50, description='Param1')
p2 = IntSlider(min=1, max=200, value=12, description='Param2')
ui = HBox([dist_dropdown, p1, p2])
out = interactive(interactive_distribution, dist_name=dist_dropdown, param1=p1, param2=p2)

